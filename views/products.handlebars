<section id="gigs" class="container">
    <h1>All Products</h1>

    {{#each Products}}
        <div class="gig">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <ul>
                <li>Budget: {{budget}}</li>
                <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Email to Buy</a></li>
            </ul>
            <div class="tech">
                <small>Technologies Needed: <span>{{technologies}}</span></small>
            </div>
        </div>
    {{else}}
        <p>No products available</p>
    {{/each}}

</section>
